<h1>New Post</h1>

<%= form_for @post do |f| %>
<%= f.label :blogger_id %>
<%= f.collection_select :blogger_id, @bloggers, :id, :name %>
<br>
<br>
<%= f.label :destination_id %>
<%= f.collection_select :destination_id, @destinations, :id, :name %>
<br>
<br>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<br>
<%= f.label :content %>
<%= f.text_area :content, :cols => 60, :rows => 20 %>
<br>
<br>
<%= f.submit %>
<%end%>

